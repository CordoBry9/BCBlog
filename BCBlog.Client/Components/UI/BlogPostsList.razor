
@if(BlogPost != null)
{
    <article class="row g-0 mb-4">

        <a href="/posts/@BlogPost.Slug" class="d-block col-sm-4">
            <img class="bg-repeat-0 bg-size-cover bg-position-center rounded-5" src="@BlogPost.ImageUrl" style="max-height: 15rem; width: 100%;" aria-label="Post image" />
        </a>
        <div class="col-sm-7">
            <div class="pt-4 pb-sm-4 ps-sm-4 pe-lg-4">
                <h3>
                    <a href="/posts/@BlogPost.Slug">@BlogPost.Title</a>
                </h3>
                <p class="d-sm-none d-md-block">@BlogPost.Abstract</p>
                <div class="d-flex flex-wrap align-items-center mt-n2">
                    <a class="nav-link text-body-secondary fs-sm fw-normal d-flex align-items-end p-0 mt-2" href="#">
                        @BlogPost.Comments.Count
                        <i class="ai-message fs-lg ms-1"></i>
                    </a>
                    <span class="fs-xs opacity-20 mt-2 mx-3">|</span>
                    @if (BlogPost.Category is not null)
                    {
                        <a class="badge text-nav fs-xs border mt-2 px-3 py-1" href="/category/@BlogPost.Category.Id"><div class="py-1">Category: @BlogPost.Category.Name</div></a>
                    }
                    <span class="fs-xs opacity-20 mt-2 mx-3">|</span>

                    <span class="fs-sm text-body-secondary mt-2">@BlogPost.Created.ToString("yyyy-MM-dd HH:mm")</span>

                    <span class="fs-xs opacity-20 mt-2 mx-3">|</span>
                    
                    @if (BlogPost.Tags is not null)
                    {
                        @foreach (TagDTO tag in BlogPost.Tags)
                        {
                            <a class="badge text-nav fs-xs border mt-2 ms-2 px-3 py-1" hrer="/tag/@tag.Id"><div class="py-1">#@tag.Name</div></a>
                        }

                        
                    }
                   
                </div>
            </div>
        </div>
    </article>
}


@code 
{

    [Parameter]
    public BlogPostDTO? BlogPost { get; set; }



}

